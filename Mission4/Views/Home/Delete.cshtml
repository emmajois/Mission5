@{
    ViewData["Title"] = "Delete Page";
}

@model FavoriteMovie

<h2>Wait, HOLD UP!</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>