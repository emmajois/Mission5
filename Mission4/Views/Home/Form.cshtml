@{
    ViewData["Title"] = "Movie Form";
}

@model Mission4.Models.FavoriteMovie

<div class="text-center">
    <h1 class="display-4">Movie Creation Form</h1>
</div>
<div class="text-center">
    <p>Fill out this movie form with your favorite movie!</p>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="CategoryId">Movie Category</label>
        <select asp-for="CategoryId">
            <option value="">Select Movie Category</option>
            @foreach (Category cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryId">@cat.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">Movie Title</label>
        <input asp-for="Title" />
        <br />

        <label asp-for="Year">Movie Year</label>
        <input asp-for="Year" />
        <br />

        <!-- This database is not in a good normal form, I just gotta put that out there.-->
        <label asp-for="Director">Movie Director(s)</label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Rating">Movie Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Has this movie been edited?</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="Lent">Who is this movie lent to?</label>
        <input asp-for="Lent" />
        <br />

        <label asp-for="Notes">Any notes?</label>
        <input asp-for="Notes" />
        <br />

        <button type="submit">Add Movie</button>

    </form>
</div>